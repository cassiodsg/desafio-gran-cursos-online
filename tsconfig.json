{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "sourceMap": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"],
      "@components": ["./components"],
      "@hooks": ["./hooks"],
      "@assets/*": ["./assets/*"],  
    }
  },
  "files": ["custom.d.ts"],
  "include": [
    "src/**/*",
    "globals.d.ts"
  ],
  "exclude": ["./node_modules", "./dist", "./.vscode"]
}
